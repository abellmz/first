<style lang="less">
  .title {
    border-bottom: 1px solid #CCCCCC;
    text-align: center;
  }

  .content {
    padding: 10px;
  }
</style>
<template>
  <!--<import src="../wxParse/wxParse.wxml"/>-->
  <view class="title">标题：{{field.title}}</view>
  <view class="content">内容：{{field.content}}</view>
  <!--<template is="wxParse" data="{{wxParseData:article.nodes}}"/>-->
</template>
<script>
  import wepy from 'wepy'
  import article from '@/services/article'
  // import WxParse from '@/services/WxParse.js'

  export default class Article extends wepy.page {
    data = {
      field: {}
    }

    async getArticleByid(id) {
      let response = await article.show(id)
      if (response.statusCode === 200) {
        // console.log(response)
        this.field = response.data.data
        this.$apply()
      }
    }

    onLoad = (options) => {
      // console.log(options)
      this.getArticleByid(options.id)
    }

    // async onLoad(options) {
    //   console.log(options)
    // }
  }
</script>
